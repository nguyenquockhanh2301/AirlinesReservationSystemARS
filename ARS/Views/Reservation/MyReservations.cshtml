@model IEnumerable<ARS.Models.Reservation>
@{
    ViewData["Title"] = "My Reservations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-ticket-detailed"></i> My Reservations</h2>
        <a asp-controller="Flight" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-search"></i> Book New Flight
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var reservation in Model)
            {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <span class="badge bg-@(reservation.Status == "Confirmed" ? "success" : reservation.Status == "Cancelled" ? "danger" : "warning") fs-6">
                                        @reservation.Status
                                    </span>
                                    <p class="mb-0 mt-2 text-muted small">@reservation.Class</p>
                                </div>
                                
                                <div class="col-md-6">
                                    @if (reservation.Legs != null && reservation.Legs.Any())
                                    {
                                        // Multi-leg itinerary
                                        var firstLeg = reservation.Legs.OrderBy(l => l.LegOrder).First();
                                        var lastLeg = reservation.Legs.OrderBy(l => l.LegOrder).Last();
                                        
                                        <h5 class="text-primary mb-2">Multi-leg itinerary (@reservation.Legs.Count leg(s))</h5>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0">@firstLeg.Flight?.OriginCity?.CityName</h6>
                                                <small class="text-muted">@firstLeg.Flight?.OriginCity?.AirportCode</small>
                                            </div>
                                            <div class="px-3">
                                                <i class="bi bi-arrow-right text-muted"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@lastLeg.Flight?.DestinationCity?.CityName</h6>
                                                <small class="text-muted">@lastLeg.Flight?.DestinationCity?.AirportCode</small>
                                            </div>
                                        </div>
                                    }
                                    else if (reservation.Flight != null)
                                    {
                                        // Single flight
                                        <h5 class="text-primary mb-2">@reservation.Flight?.FlightNumber</h5>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0">@reservation.Flight?.OriginCity?.CityName</h6>
                                                <small class="text-muted">@reservation.Flight?.OriginCity?.AirportCode</small>
                                            </div>
                                            <div class="px-3">
                                                <i class="bi bi-arrow-right text-muted"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@reservation.Flight?.DestinationCity?.CityName</h6>
                                                <small class="text-muted">@reservation.Flight?.DestinationCity?.AirportCode</small>
                                            </div>
                                        </div>
                                    }
                                    <p class="mb-0 mt-2 text-muted">
                                        <i class="bi bi-calendar"></i> @reservation.TravelDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                                
                                <div class="col-md-2 text-center">
                                    <p class="mb-1 text-muted small">Confirmation #</p>
                                    <strong>@reservation.ConfirmationNumber</strong>
                                    <p class="mb-0 mt-2 text-muted small">
                                        @reservation.NumAdults Adult(s)
                                        @if (reservation.NumChildren > 0) { <span>, @reservation.NumChildren Child(ren)</span> }
                                        @if (reservation.NumSeniors > 0) { <span>, @reservation.NumSeniors Senior(s)</span> }
                                    </p>
                                </div>
                                
                                <div class="col-md-2 text-end">
                                    <a asp-action="Details" asp-route-id="@reservation.ReservationID" class="btn btn-primary btn-sm w-100 mb-2">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                    @if (reservation.Status == "Pending" || reservation.Status == "Confirmed")
                                    {
                                        <a asp-controller="Payment" asp-action="Index" asp-route-reservationId="@reservation.ReservationID" 
                                           class="btn btn-success btn-sm w-100 mb-2">
                                            <i class="bi bi-credit-card"></i> Pay Now
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-inbox fs-1"></i>
            <h4 class="mt-3">No reservations found</h4>
            <p>You don't have any reservations yet. Start by searching for flights!</p>
            <a asp-controller="Flight" asp-action="Index" class="btn btn-primary mt-2">
                <i class="bi bi-search"></i> Search Flights
            </a>
        </div>
    }
</div>
