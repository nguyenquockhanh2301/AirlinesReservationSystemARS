@model ARS.ViewModels.RescheduleSearchResultViewModel
@{
    ViewData["Title"] = "Select new flight";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Reservation.ReservationID">Reservation Details</a></li>
            <li class="breadcrumb-item"><a asp-action="Reschedule" asp-route-id="@Model.Reservation.ReservationID">Reschedule</a></li>
            <li class="breadcrumb-item active" aria-current="page">Select Flight</li>
        </ol>
    </nav>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-calendar-event"></i> Select New Flight</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Confirmation:</strong> @Model.Reservation.ConfirmationNumber</p>
                    <p class="mb-1"><strong>New Date:</strong> @Model.NewDate.ToDateTime(TimeOnly.MinValue).ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-1"><strong>Passengers:</strong> @Model.Passengers</p>
                    <p class="mb-1"><strong>Class:</strong> <span class="badge bg-info">@Model.Class</span></p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Flights.Any())
    {
        <div class="mb-3">
            <p class="text-muted">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, (Model.CurrentPage - 1) * Model.PageSize + Model.Flights.Count) 
                of @((Model.TotalPages - 1) * Model.PageSize + Model.Flights.Count) available flights
            </p>
        </div>

        foreach (var flight in Model.Flights)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <h5 class="text-primary mb-0">@flight.FlightNumber</h5>
                            <small class="text-muted">@flight.AircraftType</small>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="text-center">
                                    <h6 class="mb-0">@flight.OriginAirportCode</h6>
                                    <small class="text-muted">@flight.DepartureTime.ToString("HH:mm")</small>
                                </div>
                                <div class="mx-3">
                                    <i class="bi bi-arrow-right text-primary"></i>
                                    <br>
                                    <small class="text-muted">@flight.Duration</small>
                                </div>
                                <div class="text-center">
                                    <h6 class="mb-0">@flight.DestinationAirportCode</h6>
                                    <small class="text-muted">@flight.ArrivalTime.ToString("HH:mm")</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <p class="mb-0 text-muted small">Available Seats</p>
                            <p class="mb-0"><strong>@flight.AvailableSeats</strong> seats</p>
                        </div>
                        <div class="col-md-3 text-end">
                            <h4 class="text-success mb-2">$@flight.FinalPrice.ToString("N2")</h4>
                            <a asp-action="RescheduleSelectSeats" 
                               asp-route-reservationId="@Model.Reservation.ReservationID" 
                               asp-route-flightId="@flight.FlightID" 
                               asp-route-scheduleId="@flight.ScheduleID" 
                               asp-route-newDate="@Model.NewDate" 
                               class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Select & Choose Seats
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Flight pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <form method="post" asp-action="RescheduleSearch" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Reservation.ReservationID" />
                            <input type="hidden" name="newDate" value="@Model.NewDate" />
                            <input type="hidden" name="page" value="@(Model.CurrentPage - 1)" />
                            <button type="submit" class="page-link" @(Model.CurrentPage == 1 ? "disabled" : "")>
                                <i class="bi bi-chevron-left"></i> Previous
                            </button>
                        </form>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <form method="post" asp-action="RescheduleSearch" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Reservation.ReservationID" />
                                <input type="hidden" name="newDate" value="@Model.NewDate" />
                                <input type="hidden" name="page" value="@i" />
                                <button type="submit" class="page-link">@i</button>
                            </form>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <form method="post" asp-action="RescheduleSearch" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Reservation.ReservationID" />
                            <input type="hidden" name="newDate" value="@Model.NewDate" />
                            <input type="hidden" name="page" value="@(Model.CurrentPage + 1)" />
                            <button type="submit" class="page-link" @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>
                                Next <i class="bi bi-chevron-right"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No available flights found for the selected date with enough seats for @Model.Passengers passenger(s).
        </div>
        <a asp-action="Reschedule" asp-route-id="@Model.Reservation.ReservationID" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Try Another Date
        </a>
    }
</div>